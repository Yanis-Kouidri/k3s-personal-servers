apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: personal-website-ingress
  namespace: portfolio
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$1
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - www.kouidri.fr
      secretName: kouidri-tls
  rules:
  - host: www.kouidri.fr
    http:
      paths:
      - pathType: Prefix
        path: "/my-first-website/(.*)"
        backend:
          service:
            name: my-first-website-service
            port:
              number: 8080
      - pathType: Prefix
        path: "/beta/(.*)"
        backend:
          service:
            name: new-portfolio-service
            port:
              number: 80
      - pathType: Prefix
        path: "/(.*)"
        backend:
          service:
            name: personal-website-service
            port:
              number: 80
